{
  "scripts": {
    "dev:index": "pnpm dev --filter ./packages/pages/index",
    "dev:layout": "pnpm dev --filter ./packages/pages/layout",
    "build": "pnpm build:examples && pnpm build:website",
    "build:examples": "pnpm build --filter ./examples",
    "build:website": "pnpm build:data && pnpm build:pages && pnpm build:inject",
    "build:data": "pnpm build --filter ./packages/data",
    "build:pages": "pnpm build --filter ./packages/pages",
    "build:inject": "pnpm build --filter ./scripts/build",
    "preview": "serve dist",
    "pretty": "prettier -w **/{src,scripts}/** --plugin-search-dir=."
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core",
        "@babel/plugin-transform-react-jsx",
        "react",
        "react-dom",
        "rollup",
        "vite"
      ]
    }
  },
  "devDependencies": {
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "serve": "^13.0.2",
    "typescript": "^4.6.3"
  }
}
